<%= form_for @product do |f| %>
  <p>
    <%= f.label "Name" %><br>
    <%= f.text_field "name" %>
  </p>
  <p>
    <%= f.label "Description" %><br>
    <%= f.text_field "description" %>
  </p>
  <p>
    <%= f.label "Price in Cents" %><br>
    <%= f.text_field "price_in_cents" %>
  </p>
  <p>
    <%= f.submit "Save" %> 
  </p>
<% end %>